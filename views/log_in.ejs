  <header class="mt-5">
    <div class="text-center">
      <img class="img-thumbnail" width="250" height="200" src="/assets/img/logo.png" alt="show_logo">
    </div>
  </header> 

  <div class="pet-landing">
    <!--TODO: REDIRECT OR REMOVE FORMS ACCORDING TO BACKEND-->
    <form action="signin" method="POST">
      <% if (signinError !== "") { %>
        <div class = "error-box">
          <strong><%= signinError %></strong>
        </div>
      <% } %>
      <div class="container">
        <h2 class="text-center mt-5 mb-5">Welcome to St. Pet-ER</h2>
        <div class="row text-center h4 mt-2">
          <div class="col-md-3">
            <label class="label-marg-left" for="Email"><b>Email:</b></label>
          </div>
          <div class="col-md-7">
            <input class="rounded form-in-width" type="email" placeholder="Enter Email Address" name="email" id="email_address" required>
          </div>
        </div>
        <div class="row text-center h4">
          <div class="col-md-3">
            <label class="label-marg-left" for="password"><b>Password:</b></label>
          </div>
          <div class="col-md-7">
            <input class="rounded form-in-width" type="password" placeholder="Enter Password" name="psw" id="psw" required>
          </div>
        </div>
        <div class="container text-center">
          <div class="col-md-12">
            <button type="submit" id="login_btn" class="btn-login btn-lg btn-success mt-3">LOG-IN</button>
          </div>
        </div>
        <div class="container text-center">
          <h1 class="mt-3">OR</h1>
          <h3 class="p-2">Register as a <a href="c-register">Client</a> or <a href="d-register">Doctor</a></h3>
        </div>
      </div>
    </form>
  </div>
  
</body>
